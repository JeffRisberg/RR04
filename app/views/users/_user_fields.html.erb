<p><%= f.label :fname %></p>
<p><%= f.text_field :fname %></p>
 
<p><%= f.label :lname %></p>
<p><%= f.text_field :lname %></p>
 
<% if can? :read, Role %>
  <p><%= f.label :role %></p>
  <ul class="no-pad no-bullets">
    <%= habtm_checkboxes(@user, :role_ids, @accessible_roles, :name); %>
  </ul>
<% end %>

<%= form_for @user, :url => user_path, :html => { :multipart => true } do |form| %>
  <%= form.file_field :avatar %>
<% end %>