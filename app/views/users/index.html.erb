<h1>Listing users</h1>

<table>
  <tr>
    <th>F Name</th>
    <th>L Name</th>
    <th>Email</th>
    <th>Roles</th>
    <th>Action</th>
    <th>Action</th>
  </tr>

<% @users.each do |u| %>
  <tr>
    <td><%= link_to_if(can?(:read, User), "#{u.fname}", user_path(u.id)) {} %></td>
    <td><%= link_to_if(can?(:read, User), "#{u.lname}", user_path(u.id)) {} %></td>
    <td><%= "#{u.email}" %></td>
    <td><%= "#{u.roles.collect{|r| r.name}}" %></td>
    <td><%= link_to_if(can?(:edit, User), "Edit", edit_user_path(u.id)) {} %></td>
    <td><%= link_to_if(can?(:delete, u), "Delete", u, :confirm => "Are you sure?", :method => :delete) {} %></td>
  </tr>
<% end %>
</table>
